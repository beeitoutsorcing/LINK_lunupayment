<?xml version="1.0" encoding="UTF-8"?>
<metadata xmlns="http://www.demandware.com/xml/impex/metadata/2006-10-31">
	<type-extension type-id="SitePreferences">
        <custom-attribute-definitions>
            <attribute-definition attribute-id="app_id">
                <display-name xml:lang="x-default">App ID</display-name>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
            <attribute-definition attribute-id="lunuWidgetURL">
                <display-name xml:lang="x-default">Lunu Widget URL</display-name>
                <description xml:lang="x-default">Lunu Widget URL</description>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
                <default-value>https://widget.lunu.io/testing/#/?action=select&amp;cancel={cancelURL}&amp;success={successURL}&amp;token={token}</default-value>
            </attribute-definition>
            <attribute-definition attribute-id="secret_key">
                <display-name xml:lang="x-default">Secret Key</display-name>
                <type>string</type>
                <mandatory-flag>false</mandatory-flag>
                <externally-managed-flag>false</externally-managed-flag>
                <min-length>0</min-length>
            </attribute-definition>
        </custom-attribute-definitions>
        <group-definitions>
            <attribute-group group-id="Lunu Payment">
                <display-name xml:lang="x-default">Lunu Payment</display-name>
                <attribute attribute-id="app_id"/>
                <attribute attribute-id="secret_key"/>
                <attribute attribute-id="lunuWidgetURL"/>
            </attribute-group>
        </group-definitions>
    </type-extension>

</metadata>